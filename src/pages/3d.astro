          <span>Doble click para centrar</span>
        </div>
      </div>

    </main>

    <!-- CTA -->
    <div class="py-8 px-4 border-t border-gray-800 text-center">
      <a 
        href="https://swi-tec.com/es/producto/hidrogenerador-universal/"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-8 py-4 bg-cyan hover:bg-cyan/90 text-dark font-semibold rounded-lg transition-colors"
      >
        Comprar Hydro Charger
      </a>
    </div>

  </div>
</Layout>

