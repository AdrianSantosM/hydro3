<Layout title="Hydro Charger 3D - Vista interactiva">
  <div class="min-h-screen bg-dark flex flex-col">
    
    <!-- Header simple -->
    <header class="py-6 px-4 border-b border-gray-800">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/img/swi-tec.png" alt="SWI-TEC" class="h-8 w-auto" />
        </a>
        <a href="/" class="text-gray-400 hover:text-white transition-colors text-sm">
          â† Volver a inicio
        </a>
      </div>
    </header>

    <!-- Contenido principal -->
    <main class="flex-1 flex flex-col items-center justify-center px-4 py-12">
      
      <div class="text-center mb-8">
        <h1 class="font-serif text-4xl sm:text-5xl mb-4">
          Hydro Charger <span class="text-cyan">3D</span>
        </h1>
        <p class="text-gray-400 text-lg">
