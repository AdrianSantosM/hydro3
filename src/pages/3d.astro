        <model-viewer
          src="/3d/7111_02_V3.glb"
          alt="Hydro Charger Universal 3D Model"
          auto-rotate
          camera-controls
          shadow-intensity="1"
          exposure="1"
          shadow-softness="1"
          environment-image="neutral"
          style="width: 100%; height: 100%; background-color: transparent;"
        >
