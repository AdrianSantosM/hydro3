          <div slot="progress-bar" class="absolute bottom-0 left-0 right-0 h-1 bg-gray-800">
            <div class="h-full bg-cyan transition-all duration-300" style="width: var(--progress, 0%);"></div>
          </div>
        </model-viewer>
      </div>

      <!-- Controles info -->
      <div class="mt-8 flex flex-wrap justify-center gap-6 text-sm text-gray-500">
